extends main

mixin overviewBox(label, text, icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text

block header
    .header-movie
        h1= title
        button.header-movie__btn(action="/") Login/Logout

block content
    section.movie-details 
        
        p.movie-details__about= movie.description
        .movie-details__directors
            each director in movie.director 
            p= director
        //- .movie-details__writes
        //-     each writer in movie.writer 
        //-     p= writer

        .movie-details__img
    section.movie-reviews 

    